<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/countryListItem"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_padding"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/countryFlagIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/cn"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/countryNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="@string/title_countries"
        android:textSize="@dimen/textsize_heading_6"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/totalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="total: 100"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/activity_vertical_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activeTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="active: 100"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deathsTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="deaths: 100"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recoveredTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="recovered: 100"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

</LinearLayout>